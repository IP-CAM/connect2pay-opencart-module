{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payxpert" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
{% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
      </div>
      <div class="panel-body">
       <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payxpert" class="form-horizontal">
        <div class="form-group">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_status">{{ entry_status }}</label>
         <div class="col-sm-5 col-md-3">
          <select id="payment_payxpert_status" name="payment_payxpert_status">
            <option value="1"{% if payment_payxpert_status == '1' %} selected="selected"{% endif %}>{{ text_enabled }}</option>
            <option value="0"{% if payment_payxpert_status != '1' %} selected="selected"{% endif %}>{{ text_disabled }}</option>
          </select>
         </div>
        </div>
        <div class="form-group required{% if error_originator %} has-error{% endif %}">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_originator">{{ entry_originator }}</label>
         <div class="col-sm-4 col-md-2">
           <input type="text" id="payment_payxpert_originator" name="payment_payxpert_originator" value="{{ payment_payxpert_originator }}" class="form-control" />
           {% if error_originator %}
             <span class="error">{{ error_originator }}</span>
           {% endif %}
         </div>
        </div>
        <div class="form-group{% if error_password %} has-error{% endif %}">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_password"><span data-toggle="tooltip" title="{{ entry_password_help }}">{{ entry_password }}</span></label>
         <div class="col-sm-4 col-md-2">
           <input type="text" id="payment_payxpert_password" name="payment_payxpert_password" class="form-control" autocomplete="off" />
           {% if error_originator %}
             <span class="error">{{ error_password }}</span>
           {% endif %}
         </div>
        </div>
        <div class="form-group">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_connect2pay_url"><span data-toggle="tooltip" title="{{ entry_connect2pay_url_help }}">{{ entry_connect2pay_url }}</span></label>
         <div class="col-sm-5 col-md-3">
           <input type="text" id="payment_payxpert_connect2pay_url" name="payment_payxpert_connect2pay_url" value="{{ payment_payxpert_connect2pay_url }}" class="form-control" />
         </div>
        </div>
        <div class="form-group">
        <label class="col-sm-4 col-md-3 col-lg-2 control-label"><span data-toggle="tooltip" title="{{ entry_3dsecure_help }}">{{ entry_3dsecure }}</span></label>
         <div class="col-sm-5 col-md-3">
          <div class="radio">
           <label>
            <input type="radio" name="payment_payxpert_3dsecure" value="1"{% if payment_payxpert_3dsecure %} checked="checked"{% endif %} />
            {{ text_enabled }}
           </label>
          </div>
          <div class="radio">
           <label>
            <input type="radio" name="payment_payxpert_3dsecure" value="0"{% if not payment_payxpert_3dsecure %} checked="checked"{% endif %} />
            {{ text_disabled }}
           </label>
          </div>
         </div>
        </div>
        <div class="form-group{% if payment_payxpert_merchant_notifications_error %} has-error{% endif %}">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label"><span data-toggle="tooltip" title="{{ entry_merchant_notifications_help }}">{{ entry_merchant_notifications }}</span></label>
         <div class="col-sm-4 col-md-2">
          <select id="payment_payxpert_merchant_notifications" name="payment_payxpert_merchant_notifications">
          {% for status in payment_payxpert_merchant_notifications_statuses %}
            <option value="{{ status }}"{% if status == payment_payxpert_merchant_notifications %} selected="selected"{% endif %}>{{ attribute(entry_merchant_notifications_status, status) }}</option>
          {% endfor %}
          </select>
         </div>
         {% if payment_payxpert_merchant_notifications_error %}
           <span class="error">{{ payment_payxpert_merchant_notifications_error }}</span>
         {% endif %}
        </div>
        <div class="form-group{% if payment_payxpert_merchant_notifications_to_error %} has-error{% endif %}">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_merchant_notifications_to"><span data-toggle="tooltip" title="{{ entry_merchant_notifications_to_help }}">{{ entry_merchant_notifications_to }}</span></label>
         <div class="col-sm-4 col-md-2">
           <input type="text" id="payment_payxpert_merchant_notifications_to" name="payment_payxpert_merchant_notifications_to" value="{{ payment_payxpert_merchant_notifications_to }}" class="form-control" />
         </div>
         {% if payment_payxpert_merchant_notifications_to_error %}
           <span class="error">{{ payment_payxpert_merchant_notifications_to_error }}</span>
         {% endif %}
        </div>
        <div class="form-group{% if payment_payxpert_merchant_notifications_lang_error %} has-error{% endif %}">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_merchant_notifications_lang"><span data-toggle="tooltip" title="{{ entry_merchant_notifications_lang_help }}">{{ entry_merchant_notifications_lang }}</span></label>
         <div class="col-sm-4 col-md-2">
          <select id="payment_payxpert_merchant_notifications_lang" name="payment_payxpert_merchant_notifications_lang">
            {% for lang in payment_payxpert_merchant_notifications_langs %}
              <option value="{{ lang }}"{% if lang == payment_payxpert_merchant_notifications_lang %} selected="selected"{% endif %}>{{ attribute(entry_lang, lang) }}</option>
            {% endfor %}
          </select>
         </div>
         {% if payment_payxpert_merchant_notifications_lang_error %}
           <span class="error">{{ payment_payxpert_merchant_notifications_lang_error }}</span>
         {% endif %}
        </div>
        <div class="form-group">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label"><span data-toggle="tooltip" title="{{ entry_failure_page_help }}">{{ entry_failure_page }}</span></label>
         <div class="col-sm-5 col-md-3">
          <div class="radio">
           <label>
             <input type="radio" name="payment_payxpert_failure_page" value="1"{% if payment_payxpert_failure_page %} checked="checked"{% endif %} />
             {{ text_enabled }}
           </label>
          </div>
          <div class="radio">
           <label>
            <input type="radio" name="payment_payxpert_failure_page" value="0"{% if not payment_payxpert_failure_page %} checked="checked"{% endif %} />
            {{ text_disabled }}
           </label>
          </div>
         </div>
        </div>
        <div class="form-group">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label">{{ entry_debuglog }}</label>
         <div class="col-sm-5 col-md-3">
          <div class="radio">
           <label>
            <input type="radio" name="payment_payxpert_debuglog" value="1"{% if payment_payxpert_debuglog %} checked="checked"{% endif %} />
            {{ text_enabled }}
           </label>
          </div>
          <div class="radio">
           <label>
            <input type="radio" name="payment_payxpert_debuglog" value="0"{% if not payment_payxpert_debuglog %} checked="checked"{% endif %} />
            {{ text_disabled }}
           </label>
          </div>
         </div>
        </div>
        <div class="form-group">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_order_status_id"><span data-toggle="tooltip" title="{{ entry_order_status_help }}">{{ entry_order_status }}</span></label>
         <div class="col-sm-5 col-md-3">
          <select id="payment_payxpert_order_status_id" name="payment_payxpert_order_status_id">
            {% for order_status in order_statuses %}
              <option value="{{ order_status.order_status_id }}"{% if order_status.order_status_id == payment_payxpert_order_status_id %} selected="selected"{% endif %}>{{ order_status.name }}</option>
            {% endfor %}
          </select>
         </div>
        </div>
        <div class="form-group">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_order_denied_status_id"><span data-toggle="tooltip" title="{{ entry_order_denied_status_help }}">{{ entry_order_denied_status }}</span></label>
         <div class="col-sm-5 col-md-3">
          <select id="payment_payxpert_order_denied_status_id" name="payment_payxpert_order_denied_status_id">
            {% for order_status in order_statuses %}
              <option value="{{ order_status.order_status_id }}"{% if order_status.order_status_id == payment_payxpert_order_denied_status_id %} selected="selected"{% endif %}>{{ order_status.name }}</option>
            {% endfor %}
          </select>
         </div>
        </div>
        <div class="form-group">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_geo_zone_id">{{ entry_geo_zone }}</label>
         <div class="col-sm-5 col-md-3">
          <select id="payment_payxpert_geo_zone_id" name="payment_payxpert_geo_zone_id">
           <option value="0">{{ text_all_zones }}</option>
           {% for geo_zone in geo_zones %}
             <option value="{{ geo_zone.geo_zone_id }}"{% if geo_zone.geo_zone_id == payment_payxpert_geo_zone_id %} selected="selected"{% endif %}>{{ geo_zone.name }}</option>
           {% endfor %}
          </select>
         </div>
        </div>
        <div class="form-group">
         <label class="col-sm-4 col-md-3 col-lg-2 control-label" for="payment_payxpert_sort_order">{{ entry_sort_order }}</label>
         <div class="col-sm-1">
          <input type="text" id="payment_payxpert_sort_order" name="payment_payxpert_sort_order" value="{{ payment_payxpert_sort_order }}" maxlength="1" class="form-control" />
         </div>
        </div>
      </form>
     </div>
   </div>
 </div>
</div>
{{ footer }} 
